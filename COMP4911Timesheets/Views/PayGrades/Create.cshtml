@model COMP4911Timesheets.ViewModels.PayGradeManagement

@{
    ViewData["PageTitle"] = "Create";
}

<h1>@ViewData["PageTitle"]</h1>

<h4>Pay Grade</h4>
<hr />
<div class="row">
    <div class="col-md-8 col-lg-6 well bs-component">
        <form asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PayGrade.PayLevel" class="control-label"></label>
                <input asp-for="PayGrade.PayLevel" class="form-control" required />
                <span asp-validation-for="PayGrade.PayLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayGrade.Cost" class="control-label"></label>
                <input asp-for="PayGrade.Cost" class="form-control" required/>
                <span asp-validation-for="PayGrade.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-raised" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
